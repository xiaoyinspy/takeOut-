/*
  外边框
*/
@media only screen and (-webkit-device-pixel-ratio: 2)
  .border-1px
    &::before
      transform : scaleY(0.5)

@media only screen and (-webkit-device-pixel-ratio: 3)
  .border-1px
    &::before
      transform : scaleY(0.3333)


top-border-1px($color)
  position relative
  &::before
    content ''
    width: 100%
    height 1px
    display block
    background $color
    position absolute
    top 0
    left 0
bottom-border-1px($color)
  position relative
  &::after
    content ''
    width: 100%
    height 1px
    display block
    background $color
    position absolute
    bottom  0
    left 0
right-border-1px($color)
  position relative
  &::before
    content ''
    width: 1px
    height 100%
    display block
    background $color
    position absolute
    top 0
    right 0
