$green = #02a774;
$yellow = #F5A100;
$bc = #e4e4e4;

/*
  1px 外边框
*/
@media only screen and (-webkit-device-pixel-ratio: 2)
  .border-1px
    &::before
      transform : scaleY(0.5)

@media only screen and (-webkit-device-pixel-ratio: 3)
  .border-1px
    &::before
      transform : scaleY(0.3333)


top-border-1px($color)
  position relative
  &::before
    content ''
    width: 100%
    height 1px
    display block
    background $color
    position absolute
    top 0
    left 0
bottom-border-1px($color)
  position relative
  &::after
    content ''
    width: 100%
    height 1px
    display block
    background $color
    position absolute
    bottom  0
    left 0
right-border-1px($color)
  position relative
  &::before
    content ''
    width: 1px
    height 100%
    display block
    background $color
    position absolute
    top 0
    right 0

bg-image($url,$width,$height)
  background-image url($url+"@2x.png")
  background-size $width $height
  @media (-webkit-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image url($url+"@3x.png")

// 清除浮动
clearFix()
  *zoom 1
  &::after
    content ''
    display block
    clear both



