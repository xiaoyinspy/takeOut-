.content
  position relative
  height 100%
  >section
    width 100%
    display block
    .header
      position fixed
      left 0
      top 0
      z-index 10
      height 40px
      width 100%
      background #02a774
      color: #fff
      font-size 20px
      line-height 40px
      font-weight bolder
      text-align center
      vertical-align middle
      .item-icon
        float left
        margin-left: 10px
        margin-right: 10px
      .login
        float right
        color white
        margin-left: 10px
        margin-right: 10px
    .containerC
      padding-top 40px
      overflow hidden
      .mess
        color white
        top-border-1px(#e6e6e6)
        height 80px
        width 100%
        box-sizing border-box
        background #02a774
        padding 20px 10px
        position relative
        >div.item-icon
          position absolute
          left 20px
          top 20px
          border-radius 25px
          background #7e8c8d
          width 50px
          height 50px
          overflow hidden
          .iconfont
            font-size 50px
            line-height 50px
      .mess1
        width 100%
        padding-left 60px
        padding-right 20px
        >span
          font-size 18px
          float left
          margin-left 15px
        .item-icon
          font-size 15px
          margin-top 5px
          line-height 25px
          .iconfont
            font-size 25px
            margin-right -8px
            vertical-align middle
        .right
          position absolute
          right 20px
          top 50%
          transform translateY(-50%)
          >.iconfont
            font-size 15px
      .munber
        width 100%
        height 80px
        background white
        display flex
        justify-content space-around
        >div
          height 100%
          width 0
          flex 1
          right-border-1px(#e6e6e6)
          bottom-border-1px(#e6e6e6)
          display flex
          flex-direction column
          justify-content space-around
          align-items center
          .num :nth-child(1)
            font-weight bolder
            font-size 25px
          .yue
            color orange
          .youhui
            color red
          .jifen
            color green
      .items
        margin-top 10px
        top-border-1px(#e6e6e6)
        .item
          height 50px
          background white
          vertical-align middle
          text-align center
          line-height 50px
          display flex
          justify-content space-around
          .box
            top-border-1px(#e6e6e6)
            padding-right 20px
            height 100%
            width 80%
            float right
            display flex
            justify-content space-between
          >span
            font-size 20px
            line-height 50px
          >span .iconfont
            font-size 20px
          >span .icon-jiantou1
            float right
            font-size 15px
          .icon-dingdan
            color green
          .icon-jifen
            color red
          .icon-vip
            color orange
          .icon-fuwu
            color green
      .flex
        height 100%
        display flex
        flex-direction column
        flex-wrap wrap
        justify-content space-around
        align-items center
        .container
          width 70%
          height 70%
          display flex
          flex-direction column
          flex-wrap wrap
          justify-content  space-between
          align-items center
          >img
            width 100%
          >span
            font-size 23px
          >button
            border-style: none
            list-style-type none
            background #02a774
            height 40px
            width 50%
            display block
            border-radius 2px
            color white
            font-size 15px
            line-height 15px
            margin-top 20px
      .swiper-container
        bottom-border-1px(#e6e6e6)
        height 180px
        .swiper-slide
          background white
          height 100%
          width 100%
          display flex
          flex-direction row //侧轴居中
          align-items center
          flex-wrap wrap
          font-size 12px
          .item
            text-align center
            margin-top 10px
            width 25%
            display flex
            flex-direction column
            align-items center
            justify-content space-around
            img
              width 50px
              margin-bottom 5px
              height 50px
      .shop
        margin-top: 10px
        width 100%
        background white
        .title
          color #7e8c8d
          font-size 15px
          margin 5px 0
          padding-top 10px
        .merchant
          position relative
          overflow hidden
          padding 10px
          >img
            width 80px
            height 80px
            position absolute
            top 20px
            left 10px
          .des
            color black
            width 100%
            height 100px
            box-sizing border-box
            padding 0 20px 5px 110px
            overflow hidden
            .brand
              float left
              font-size 12px
              background  yellow
              font-weight 200
              margin 3px
            .name
              font-size 20px
              font-weight bolder
              float left
            .server
              margin 3px
              font-size 12px
              position relative
              overflow hidden
              >span
                float right
                border solid 1px #7e8c8d
                margin-left  4px
                color #7e8c8d
                font-weight 200
            .star
              float left
              font-size 10px
              >img
                width 10px
                height 10px
              .fen
                font-size 12px
                color  darkgoldenrod
              .count
                font-size 7px
            .price
              padding-top 90px
              font-size 12px
            .express
              background #02a774
              font-size 8px
              color white
              float right
              margin-right 5px
            .time
              color #02a774
              line-height 8px
              font-size 8px
              border solid 1px #02a774
              float right
      .searchInput
        margin-top
        height 60px
        background white
        padding 10px
        >input
          width 80%
          height 40px
          padding 0px
          background #f5f5f5
          font-weight 200
        .button
          border-style: none
          list-style-type none
          background #02a774
          font-weight bolder
          height 40px
          width 15%
          color white
          font-size 20px
          line-height 20px
  #login-item
    display none
    position relative
    &.on
      display block
      height 100%
      background white
      .iconfont
        position absolute
        left 10px
        top 10px
        font-size 15px
      .login-flex
        background white
        height 50%
        padding-top 100px
        display flex
        flex-direction column
        align-items center
        justify-content space-around
        .loginHeader
          color #02a774
          font-size 40px
          margin-bottom 30px
        .loginTitle
          width 50%
          display flex
          justify-content space-between
          .title
            width 35%
            font-weight 500
            height 20px
            &.active
              color #02a774
              border-bottom solid 2px #02a774
        .login
          width 80%
          height 35px
          color white
          font-weight 500
          font-size 16px
          text-align center
          line-height 35px
          background lightgreen
        .loginContent
          width 80%
          color #7e8c8d
          font-size 13px
          display none
          &.active
            display block
          .loginMess1
            background white
            border solid 1px #7e8c8d
            margin-bottom 10px
            height 35px
            border-radius 3px
            display flex
            align-items stretch
            justify-content space-around
            >a
              line-height 35px
            .switch
              margin auto 0
              width 50px
              height 22px
              border-radius 10px
              border solid 1px rgba(0,0,0, .4)
              vertical-align baseline
              .circle
                width 20px
                height 20px
                display inline-block
                border-radius 10px
                margin auto 0
                border solid 1px  rgba(0,0,0, .4)
                vertical-align middle
          .loginMess2
            background white
            border solid 1px #7e8c8d
            margin-bottom 10px
            height 35px
            border-radius 3px
            display flex
            align-items stretch
            padding-left 20px
          .loginMess
            line-height 20px
            .item
              color #02a774
              font-weight bold
